    "@nestjs/swagger": "^11.0.3",
    "@nestjs/websockets": "^11.0.12",
    "@nestjs/cli": "^11.0.0",
    "@nestjs/schematics": "^11.0.0",
    "@nestjs/testing": "^11.0.1",
