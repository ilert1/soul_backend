  "scripts": {
    "build": "nest build",
    "format": "prettier --write \"src/**/*.ts\" \"test/**/*.ts\"",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"{src,apps,libs,test}/**/*.ts\" --fix",
    "prepare": "husky",
    "migrate:deploy": "npx prisma migrate deploy",
    "migrate:dev": "npx prisma migrate dev",
    "migrate:reset": "npx prisma migrate reset",
    "migrate:status": "npx prisma migrate status",
    "db:seed": "npx prisma db seed",
    "test:deploy": "mocha ./test/**/*.e2e-spec.ts ./src/**/*.spec.ts",
    "test:dev": "mocha ./test/**/*.e2e-spec.ts ./src/**/*.spec.ts",
    "test:watch": "mocha --watch ./test/**/*.e2e-spec.ts ./src/**/*.spec.ts",
    "test:cov": "nyc mocha ./test/**/*.e2e-spec.ts ./src/**/*.spec.ts",
    "test:debug": "node --inspect mocha ./test/**/*.e2e-spec.ts ./src/**/*.spec.ts",
    "test:e2e": "mocha ./test/**/*.e2e-spec.ts",
    "test:unit": "mocha ./src/**/*.spec.ts"
  },
  "prisma": {
    "seed": "ts-node src/seeds/seed.ts"
  },
